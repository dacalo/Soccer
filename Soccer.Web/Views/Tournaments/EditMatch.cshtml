@model Soccer.Web.Models.MatchViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Partido</h2>

<h4>Partido del grupo: @Model.Group.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMatch" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_Match" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsGroup" asp-route-id="@Model.GroupId" class="btn btn-success">Regresar a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

